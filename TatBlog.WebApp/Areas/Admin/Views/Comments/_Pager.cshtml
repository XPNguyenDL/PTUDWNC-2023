@model IPagedList<Comment>

@if (Model.PageCount > 1)
{
    <div class="my-4 text-center">
        @if (Model.HasPreviousPage)
        {
            <a asp-area="Admin"
               asp-controller="Comments"
               asp-acction="Index"
               asp-route-p="@(Model.PageNumber - 1)"
               asp-route-ps="@Model.PageSize"
               class="btn btn-info">
                <i class="fa fa-arrow-left"></i>
                Trang trước
            </a>
        }
        else
        {
            <button type="button"
                    class="btn btn-outline-secondary"
                    disabled>
                <i class="fa fa-arrow-left"></i>
                Trang trước
            </button>
        }

        @if (Model.HasNextPage)
        {
            <a asp-area="Admin"
               asp-controller="Comments"
               asp-acction="Index"
               asp-route-p="@(Model.PageNumber + 1)"
               asp-route-ps="@Model.PageSize"
               class="btn btn-info">
                Trang sau
                <i class="fa fa-arrow-right"></i>
            </a>
        }
        else
        {
            <button type="button"
                    class="btn btn-outline-secondary"
                    disabled>
                Trang sau
                <i class="fa fa-arrow-right"></i>
            </button>
        }
    </div>
}