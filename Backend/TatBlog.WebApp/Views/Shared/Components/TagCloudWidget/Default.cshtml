@model IList<TagItem>

<div class="mb-4">
    <h3 class="text-success mb-2">
        Tag Cloud
    </h3>
    @foreach (var item in Model)
    {
        <button class="btn btn-outline-secondary m-1">
            <a asp-area=""
           asp-controller="Blog"
           asp-action="Tag"
           asp-route-slug="@item.UrlSlug">
                @item.Name
                <span>(@item.PostCount)</span>
            </a>
        </button>
    }
</div>